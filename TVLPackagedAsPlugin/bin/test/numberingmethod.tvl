NumberingMethod {
	group allof {
		Side //Clonable feature [1..2]	
	}
	real horizontalMargin; //Optional attribute
    real verticalMargin;
    Side.pos==center -> NumberingMethod.horizontalMargin==-1; //Constraint on clonable feature "for all"
    bool color;
}

Side {
	enum side in {recto, verso};
	enum alignment in {top, bottom};
    enum pos in {left, center, right};
	Side.side==verso -> Sheet.side==2;
}