Tab {
	group allof {
		VeticalAlignment,
		HorizontalAlignment, 
		opt Text
	}
	orientation orient;
	int groupe; //Indicates the group number of a Tab 
	ifin: Media.tab;
}

HorizontalAlignment {
	enum pos in {left, right, center};
	real margin;
	(pos==center) -> (margin == -1); // TODO: check how it is coded in PRISMAprepare
}

VeticalAlignment {
	enum pos in {top, bottom, center};
	real margin;
	(pos==center) -> (margin == -1); // TODO: check how it is coded in PRISMAprepare
}

Text {
	int lineCount in [0..*];
	bool backSide;
	bool rotate; //optional attribute
	bool color; //False for black, true for other colors  -> Useful?
	(rotate==true) -> (backSide==true);
	Text.backSide -> !Media.singleSided;
}