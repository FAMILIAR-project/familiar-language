Sheet {
	group allof {
		opt Tab,
		Page, //Clonable feature
		opt Hole, //Clonable feature
		Media,
		opt Staple,//Clonable feature
		opt NumberingMethod
	}
	int section; //ID of the section of the sheet [Maybe optional]
	enum paperPass in {sef, lef};
	int side in {1,2};
	enum folding in {triFoldIn, multiTriFoldIn, triFoldOut, halfFold, multiHalfFold, parallelFold, simpleGateFold, gateFold, zFolding, none}; //optional folding replaced by "none"
	enum stapling in {none, leftStaple, topStaple, stitch, other};
	Sheet.folding !=none -> !Tab;
	Sheet.folding !=none -> !Media.tab;
	Sheet.folding==zFolding -> Document.binding==top;
	!(Sheet.folding in {none,zFolding}) -> Page.bindingMargin==-1; //Constraint on optional attribute
	(stapling==leftStaple) -> (Document.binding==left);
	(stapling==topStaple) -> (Document.binding==top);
}

Sheet.Hole { //Clonable feature
	position pos; 
	dimension dim;
}

Staple { //Clonable feature
	position pos;
	ifin: ((Sheet.stapling==leftStaple) || (Sheet.stapling==topStaple) || (Sheet.stapling==stitch));
}
include(tab.tvl);
include(page.tvl);
include(media.tvl);
include(numberingmethod.tvl);