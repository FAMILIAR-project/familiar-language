/*
 * Can't select directly the Interior and Equipment
 * when we choose the model.
 */



root AudiCar {
	
	
	group allof{
		ModelLine,
		BodyStyle,
		Model,
		Engine,
		Exterior,
		Interior,
		Equipment
	}
}


ModelLine {

	group oneof {
		AudiA1 {
			AudiA1 -> (A1 || A1Sportback);
			AudiA1 -> (Door3 || Sportback);
		},
		AudiA3
		{
			AudiA3 -> (A3 || A3Sportback || A3Cabriolet || S3 || S3Sportback || RS3Sportback);
			AudiA3 -> (Door3 || Sportback || Cabriolet);
		},
		AudiA4
		{
			AudiA4 -> (A4Saloon || A4Avant || A4AllroadQuattro || S4Saloon || S4Avant);
			AudiA4 -> (Saloon || Avant || AllroadQuattro);
		},
		AudiA5
		{
			AudiA5 -> (A5Coupe || A5Sportback || A5Cabriolet || S5Coupe || S5Sportback || S5Cabriolet || RS5Coupe);
			AudiA5 -> (Sportback || Coupe || Cabriolet);
		},
		AudiA6
		{
			AudiA6 -> (A6Saloon || A6Avant);
			AudiA6 -> (Saloon || Avant);
		},
		AudiA7
		{
			AudiA7 -> (A7Sportback);
			AudiA7 -> (Sportback);
		},
		AudiA8
		{
			AudiA8 -> (A8 || A8L || A8W12);
			AudiA8 -> (Saloon);
		},
		AudiQ3
		{
			AudiQ3 -> (Q3);
			AudiQ3 -> (SUV);
		},
		AudiQ5
		{
			AudiQ5 -> (Q5);
			AudiQ5 -> (SUV);
		},
		AudiQ7
		{
			AudiQ7 -> (Q7 || Q7V12);
			AudiQ7 -> (SUV);
		},
		AudiTT
		{
			AudiTT -> (TTCoupe || TTRoadster || TTSCoupe || TTSRoadster || TTRSCoupe || TTRSRoadster);
			AudiTT -> (Coupe || Roadster);
		},
		AudiR8
		{
			AudiR8 -> (R8Coupe || R8Spyder);
			AudiR8 -> (Coupe || Spyder);
		}
	}
	
}

BodyStyle {
	group oneof {
		Saloon,
		Avant,
		Door3,
		Sportback,
		Coupe,
		Cabriolet
		{
		//	Cabriolet -> (A3Cabriolet || A5Cabriolet || S5Cabriolet);
		},
		Roadster
		{
			//Roadster -> (TTRoadster || TTSRoadster || TTRSRoadster);
		},
		Spyder
		{
			//Spyder -> (R8Spyder);
		},
		AllroadQuattro
		{
		//	AllroadQuattro -> (A4AllroadQuattro);
		},
		SUV
		{
			//SUV -> (Q3 || Q5 || Q7 || Q7V12);
		}
	}
}

Model{
	group oneof{
		A1,
		A1Sportback,
		A3,
		A3Sportback,
		A3Cabriolet,
		S3,
		S3Sportback,
		RS3Sportback,
		A4Saloon,
		A4Avant,
		A4AllroadQuattro,
		S4Saloon,
		S4Avant,
		A5Coupe,
		A5Sportback,
		A5Cabriolet,
		S5Coupe,
		S5Sportback,
		S5Cabriolet,
		RS5Coupe,
		A6Saloon,
		A6Avant,
		A7Sportback,
		A8,
		A8L,
		A8W12,
		Q3,
		Q5,
		Q7,
		Q7V12,
		TTCoupe,
		TTRoadster,
		TTSCoupe,
		TTSRoadster,
		TTRSCoupe,
		TTRSRoadster,
		R8Coupe,
		R8Spyder
	}
}

/**
Model => TrimLine => Motor => Fuel
Fuel => Motors
 */
Engine{
	group allof{
		DriveTrain,
		Gas,
		TrimLine,
		Motor,
		WheelDrive
	}
	
	
}

WheelDrive{
	group oneof{
		Quatro,
		FrontWheelDrive,
		RearWheelDrive
	}
}

DriveTrain{
	group oneof{
		Automatic,
		Manual,
		STronic
	}
}

Gas{

	group oneof{
		Diesel,
		Petrol
	}
}

TrimLine{
	group oneof{
		SE,
		Sport,
		SETechnik,
		SLine,
		BlackEdition,
		CompetitionLine,
		ContrastEdition
	}
}

Motor{	
	group allof{		
		ModelMotor,
		Power
	}
}

Power {
	
	group oneof{
		HorsePower82,
		HorsePower122,
		HorsePower185,
		HorsePower105,
		HorsePower143
	}
	
	
}


/**
 * TM = TrimLine
 */

ModelMotor{
	group oneof{
		SE12TFSI,
		CompetitionLine14TFSI,
		CompetitionLine14TFSI119g,
		ContrastEdition12TFSI,
		ContrastEdition14TFSI,
		ContrastEdition14TFSI119g,
		Sport12TFSI,
		Sport14TFSI,
		Sport14TFSI119g,
		BlackEdition14TFSI,
		SLine12TFSI,
		SLine14TFSI,
		SE16TDI,
		CompetitionLine16TDI,
		ContrastEdition16TDI,
		ContrastEdition20TDI,
		Sport16TDI,
		Sport20TDI,
		BlackEdition20TDI,
		SLine16TDI,
		SLine20TDI
	}
}

Exterior{
	group allof{
		Colors,
		Wheel,
		opt ExteriorPackage group someof{
			BlackStyling,
			ContrastRoof
		}
	}
}

Colors{
	group oneof{
		Color,
		Grey
	}
}

Color{
	int price;
	
	group oneof{
		 Metallic ,
		 PearlEffect ,
		 AudiExclusive ,
		 Other
	}
}

Grey{
	group oneof{
		 MetallicGrey,
		 PearlEffectGrey,
		 OtherGrey
	}
}

Wheel{
	int size;
	group allof{
	
		
		TypeWheel
	}
	
}

TypeWheel{

	group oneof{
		Spoke5 ,
		Spoke6,
		Harm7,
		Hole6
	}
}

/**
* The selection of ExclusiveLeatherPackage unselects SeatUphopstery
*/
Interior{
	group oneof {
		SeatUpholstery,
		InteriorPackage
	}
}

SeatUpholstery{
	group oneof {
		Cloth,
		Leather group oneof {
			Vienna,
			Valcona,
			Nappa,
			Milano
		},
		Alcantara
	}
}

InteriorPackage{
	group someof{
		ExclusiveLeather,
		MediaStyle
	}
}

Equipment{
	group someof{
		Package,
		EquipExterior,
		Tyres,
		EquipInterior,
		SteeringWheels,
		Seats,
		SafetyAndTechnology,
		AudiAndCommunication,
		Warranty
	}	

}